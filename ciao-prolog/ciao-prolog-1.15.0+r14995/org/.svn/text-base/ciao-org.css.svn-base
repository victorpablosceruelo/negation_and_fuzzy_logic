/* A CSS style for our Org files in Ciao */

h1,h2,h3,h4,h5,h6 {
}
body {
  background: #fff;
  padding: 0px;
  margin: 0px;
  font-family: "Helvetica Neue", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif !important;
}
#table-of-contents {
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 16px;
  font-size: 12px; 
}
#content {
  background: #fff;
  margin-left: 32px;
  margin-right: 32px;
  margin-top: 0px;
  margin-bottom: 0px;
  padding: 16px;
  font-size: 14px; 
}
#postamble {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  background: #f0f0f0;
  text-align: right;
  margin: 0px;
  padding-top: 16px;
  padding-bottom: 16px;
  padding-right: 48px;
  padding-left: 48px;
  color: #888;
  font-size: 12px; 
}
#postamble p {
  margin-top: 0px;
  margin-bottom: 0px;
}

