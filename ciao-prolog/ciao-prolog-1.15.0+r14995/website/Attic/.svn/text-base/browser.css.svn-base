/* (New stuff) */

.authors {
  font-size: 8pt;
  padding-top: 0.5ex;
  padding-bottom: 0.5ex;
  padding-left: 1em;
  padding-right: 1em;
  margin-right: 2em;
  margin-bottom: 2em;
//  border-left: 8px solid #ddd;
//  border-top: 1px solid #ddd;
//  border-bottom: 1px solid #ddd;
//  border-right: 1px solid #ddd;
  border-top: 1px dotted #ddd;
  border-bottom: 1px dotted #ddd;
  color: #888;
//  background-color: #eee;
}

#status {
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 1em;
  padding-right: 1em;
  position: absolute;
  left: 0;
  bottom: 0;
}

.iso-keyword {
  font-family: 'Lucida Grande', Verdana, Arial, Sans-Serif;
  background-color: #fff;
  border: 1px solid #f40;
  padding-top: 0px;
  padding-bottom: 0px;
  padding-left: 3px;
  padding-right: 3px;
  margin-left: 1em;
  color: #f40;
}

#navigation {
  font-size: 8pt;
//  text-transform: uppercase;
  color: #000;
}

#navigation a {
  color: #000;
  border-bottom: 1px dotted #000;
}

#navigation a:hover {
  color: #000;
  border-bottom: 1px solid #000;
}

#contents-caption {
  font-weight: bold;                   
  font-size: 8pt;
  text-transform: uppercase;
  padding-left: 8px;
  color: #a40;
}

#contents {
  margin-right: 2em;
  margin-bottom: 2em;
  border-left: 8px solid #ffe0a0;
  border-top: 1px solid #ffe0a0;
  border-bottom: 1px solid #ffe0a0;
  border-right: 1px solid #ffe0a0;
}

#contents li {
  display: inline;
  margin: 0px;
}

#contents ul a:hover {
  text-decoration: underline;
}

#contents ul a.stripe1 {
  border: 0px;                        
  color: #a40;
}

#contents ul a.stripe2 {
  border: 0px;                        
  color: #a40;
  background-color: #fff8df;
}

#contents ul {
  list-style: none;
  padding: 0px;
  margin: 0px;
}

#contents ul a {
  display: block;
  border: none;
  margin: 0px;
  padding: 1px;
  padding-left: 1em;
  padding-right: 1em;
}

