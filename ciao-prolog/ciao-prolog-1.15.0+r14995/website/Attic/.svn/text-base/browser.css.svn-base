/*
 *  SPECIAL OUTPUT MARKUP
 */

/* Boxed title */
div.boxedtitle {
  width:		100%;
  background:	#fffff0;
  padding-right:	1em;
  border-style:	solid;
  border-width:	3pt;
  border-color:	#000088;
  text-align:	center;
}

/* Document title */
b.applname {
  color:		#505050;
}

/* Document title */
h1.title {
  color:		#505050;
  font-size:	32pt;
}

/* Application title */
h1.appltitle {
  font-size: 32pt;
}

/* Application name */
h1.applname {
  color: #505050;
  font-size: 32pt;
}

/* Predicate definitions, etc */
span.define {
//    font-family: "Palatino Linotype", "Book Antiqua", "Palatino", "serif";
//  font-weight: bold;
//  text-decoration: underline;
//  color: #996699;
  -moz-border-radius: 2px;
  -webkit-border-radius: 2px;
  font-style: normal;
  font-weight: normal;
  font-size: 8pt;
  padding: 2px;
  padding: 2px;
  background: #835;
  color: #fff;
}

/* Cartouche environment formatting */
div.cartouche {
  background: #f8f0f8;
  padding-right: 1em;
  padding-top: 1ex;
  padding-bottom: 1ex;
  border-left: 8px solid #d0c0d0;
  border-bottom: 1px solid #d0c0d0;
  border-top: 1px solid #d0c0d0;
  border-right: 1px solid #d0c0d0;
}

/* Cartouche environment formatting */
.note {
  background: #eee;
  padding-right: 1em;
  padding-top: 1ex;
  padding-bottom: 1ex;
  border-left: 8px solid #ddd;
  border-bottom: 1px solid #ddd;
  border-top: 1px solid #ddd;
  border-right: 1px solid #ddd;
}

/*
 * SPECIAL STYLE FIXES
 */

/* Fixes for top level menu lists */
ul {
  margin-top: 0.5em;	/* A small margin before */
  margin-bottom: 0.5em;	/* A small margin after */
  line-height: 1.2em;	/* Space in between lines */
}

/* Fixes for second level menus */
ul il {
  line-height:	1.2em;	/* No space between lines */
}

/* Fixes for description lists */
DL {
  margin-top: 0.5em;	/* A small margin before */
  margin-bottom: 0.5em;	/* A small margin after */
}

/* Fixes for examples and code parts */
code, tt {
  color: #904040;
}

pre {
  color: #404040;
      /*        font-weight:	bold; */
//      font-size:	80%;
  font-family:	monospace;
  border: 1px solid #a0a0a0;
  background:	#f8f8f8;
  padding-top: 0.5ex;
  padding-bottom: 0.5ex;
  padding-left: 1em;
  padding-right: 1em;
}

