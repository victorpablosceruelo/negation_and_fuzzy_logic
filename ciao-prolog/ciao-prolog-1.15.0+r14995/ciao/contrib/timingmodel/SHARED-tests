CALIB2_NPROF=5
CALIB2_NTIME=1000
CALIB2_NTRUE=1000
CALIB2_NREPS=20
CALIBRATORS2_0=$(addsuffix _0, $(CALIBRATORS2))


CALIBRATORS2_NPROF=$(addsuffix _$(CALIB2_NPROF)_prof, $(CALIBRATORS2))
CALIBRATORS2_NTIME=$(addsuffix _$(CALIB2_NTIME)_time, $(CALIBRATORS2))
CALIBRATORS2_0PROF=$(addsuffix _0_prof, $(CALIBRATORS2))
CALIBRATORS2_0TIME=$(addsuffix _0_time, $(CALIBRATORS2))

