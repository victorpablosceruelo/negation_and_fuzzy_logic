	$(CALIBRATORS2_0PROF) $(CALIBRATORS2_0TIME)

CALIBRATORS2_PROF=$(addsuffix _c.prf, $(CALIBRATORS2_NPROF) $(CALIBRATORS2_0PROF))
CALIBRATORS2_TIME=$(addsuffix _c.oti, $(CALIBRATORS2_NTIME) $(CALIBRATORS2_0TIME))

