#!/bin/sh
CIAOVERSION=-<v>CiaoVersion</v>
CIAOSUFFIX=<v>CiaoSuffix</v>

CIAOBINDIR=<v>CiaoBinDir</v>

# CIAOBINDIR=`dirname $0`

if [ "${PATH:-0}" = "0" ] ; then
    PATH=${CIAOBINDIR}
else
    case ${PATH} in
	${CIAOBINDIR}:* | *:${CIAOBINDIR} | *:${CIAOBINDIR}:* ) ;;
	* )
	    PATH=${CIAOBINDIR}:${PATH} ;;
    esac
fi

if test "$#" = "0" ; then
    exec ${CIAOBINDIR}/ciaosh${CIAOVERSION}${CIAOSUFFIX} <v>ExtraCommands</v>
elif test "$1" = "-c"; then
    shift ; exec ${CIAOBINDIR}/ciaoc${CIAOVERSION}${CIAOSUFFIX} "$@"
else
    exec ${CIAOBINDIR}/ciao-shell${CIAOVERSION}${CIAOSUFFIX} "$@"
fi
