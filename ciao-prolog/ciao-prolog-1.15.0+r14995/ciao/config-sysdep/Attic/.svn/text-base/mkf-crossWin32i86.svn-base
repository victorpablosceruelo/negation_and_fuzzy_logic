#endif



FOREIGN_FILES_FLAG=
ENGINENAME:=$(ENGINENAME).exe

#  Local C compiler
LCC=$(CC)

# C compiler
CC=i386-mingw32-gcc

# Linker
LD=i386-mingw32-gcc

# C compiler options for generating shared libraries code
CCSHARED=

# Linker specific options
# "-rdynamic" allows the dynamic libraries symbols to be resolved against
# those defined in ciaoengine
LINK_FLAGS=-static

# Linker options for shared objects (Just to avoid compiler complaints)
LDSHARED=-c

# Extension of shared libraries
SOSUFFIX=.so


# Standard libraries
LIBS=

ARCHNAME=i86

# Operating system version
OSNAME=crossWin32

# How to install an make directories
MKDIR="mkdir -p"
INSTALL=install

# Making etags
ETAGS=

CFLAGS:=$(CFLAGS) -DSTATICENG -DcrossWin32i86 \
 -I/usr/i386-mingw32/include 
DEFAULTYPE=stat
