# ----------------------------------------------------------------------------
# Profile dependent options:
# ----------------------------------------------------------------------------

TAR[mntedison]=tar -m
TAR[vmwinxp]=tar -m

MAINTAINERS=efmera@gmail.com

MAKE=/usr/bin/make

SAVELOGFILES=yes

CONFIGURECRON=yes

TESTTYPE?=norm

MASTER_HOST=mntedison

REPORTCHANGESTO=edison

# Specifies the machine where the logs are stored
LOG_REPO_HOST=mntedison
LOG_REPO_URLBASE=http://mntedison/~edison/

PBUNDLE_REPO_HOST=mntedison
PBUNDLE_REPO_DIR=/var/ciaobot/ciaopacks/
PBUNDLE_REPO_URLBASE=$(LOG_REPO_URLBASE)tmp/

# Commands that allow us to access the slave servers from the master
# server
RUN_AT_HOST[mntedison]=$(SSH) edison@mntedison
RUN_AT_HOST[vaio2edison]=$(SSH) edison@vaio2edison
RUN_AT_HOST[vmwinxp]=$(SSH) edison@vmwinxp

# Commands that allow us to access the master server from the
# installation server
REMOTEACCESSMASTER=$(SSH) edison@mntedison

# Commands that allow us to access the server were the packages are
# stored from the installation server
REMOTEACCESS_RUN_AT_PBUNDLE_REPO_HOST=$(RUN_AT_HOST[$(PBUNDLE_REPO_HOST)])

# The user that access the Ciao Repository
SVN_REPO_USER:=edison

# The server that contains the Ciao Repository
SVN_REPO_HOST:=mntedison

# The directory in which the Ciao Repository is located
SVN_REPO_ROOT:=/home/edison/LocalReps/CiaoDE/
