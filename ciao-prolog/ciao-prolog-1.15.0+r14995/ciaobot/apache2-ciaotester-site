# Copy this file to your test server in the directory
# /etc/apache2/sites-enabled/

<VirtualHost *:80>
    Alias /tests/ "/home/ciaotester/tests/"
    <Directory "/home/ciaotester/tests/">
        Options Indexes MultiViews FollowSymLinks
        AllowOverride None
        Order deny,allow
        Allow from all
    </Directory>
    Alias /ciaopacks/ "/shared/ciaopacks/"
    <Directory "/shared/ciaopacks/">
        Options Indexes MultiViews FollowSymLinks
        AllowOverride None
        Order deny,allow
        Allow from all
    </Directory>
</VirtualHost>
