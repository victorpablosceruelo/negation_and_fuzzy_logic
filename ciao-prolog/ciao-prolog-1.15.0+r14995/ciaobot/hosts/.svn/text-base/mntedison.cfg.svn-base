# Config file for Ubuntu LINUXi86_64

CONFIGURE_VARS=
CONFIGURE_OPTS=--silent=true --unused-pred-warnings=yes \
	--instype=local \
	--with_ciaoppcl=yes \
	--gen_ciaopp_asr=yes --gen_ciao_asr=yes --with_gsl=no \
	--update_dotemacs=no --update_dotxemacs=no \
	--update_bashrc=no --update_cshrc=no

INSTALL_VARS=
UNINSTALL_VARS=

# The packing option use a default packager, but you can configure other
# packaging method here:

gen_pbundle__host_$(HOSTNAME):

install_pbundle__host_$(HOSTNAME):

uninstall_pbundle__host_$(HOSTNAME):

# The names of the slave machines built from source tar
BUILDSLAVES_SRC=

# The names of the slave machines built from noarch tar
BUILDSLAVES_NOA=
# vmwinxp

# The names of the slave machines built from binary tar
BUILDSLAVES_BIN=

# The name of the produced packages (for example, in windows is
# CiaoDE-1.13.0-7689.exe)

PBUNDLE_SET?=1

PRODUCED_PBUNDLE_ITEMS=$(PRODUCED_PBUNDLE_ITEMS[$(PBUNDLE_SET)])

PRODUCED_PBUNDLE_ITEMS[1]=src portfile desc
PRODUCED_PBUNDLE_ITEMS[2]=noa
PRODUCED_PBUNDLE_ITEMS[3]=bin
PRODUCED_PBUNDLE_ITEMS[4]= \
		ciao_ps   ciaopp_ps   lpdoc_ps   \
		ciao_pdf  ciaopp_pdf  lpdoc_pdf  \
		ciao_html ciaopp_html lpdoc_html \
		ciao_manl ciaopp_manl lpdoc_manl \
		ciao_info ciaopp_info lpdoc_info \
		ciao_texi ciaopp_texi lpdoc_texi \
		ciao_dvi  ciaopp_dvi  lpdoc_dvi

# Note: PRODUCED_PBUNDLE_ITEM file names are relative to 
#       the build/pbundle directory
PRODUCED_PBUNDLE_ITEM[src]=$(PBUNDLE_BASE).tar.gz
STORED_PBUNDLE_ITEM[src]=$(PRODUCED_PBUNDLE_ITEM[src])
PRODUCED_PBUNDLE_ITEM[portfile]=Portfile
STORED_PBUNDLE_ITEM[portfile]=$(PRODUCED_PBUNDLE_ITEM[portfile])
PRODUCED_PBUNDLE_ITEM[desc]=desc.tmpl
STORED_PBUNDLE_ITEM[desc]=$(PRODUCED_PBUNDLE_ITEM[desc])
PRODUCED_PBUNDLE_ITEM[noa]=$(PBUNDLE_BASE)-noarch.tar.gz
STORED_PBUNDLE_ITEM[noa]=$(PRODUCED_PBUNDLE_ITEM[noa])
PRODUCED_PBUNDLE_ITEM[bin]=$(PBUNDLE_BASE)-bin-$(CIAOARCH).tar.gz
STORED_PBUNDLE_ITEM[bin]=$(PRODUCED_PBUNDLE_ITEM[bin])

PRODUCED_PBUNDLE_ITEM[ciao_ps]=../doc/ciao-$(CIAOVERSION).ps
STORED_PBUNDLE_ITEM[ciao_ps]=$(PBUNDLE_BASE)_ciao.ps
PRODUCED_PBUNDLE_ITEM[ciaopp_ps]=../doc/ciaopp-$(CIAOPPVERSION).ps
STORED_PBUNDLE_ITEM[ciaopp_ps]=$(PBUNDLE_BASE)_ciaopp.ps
PRODUCED_PBUNDLE_ITEM[lpdoc_ps]=../doc/lpdoc-$(LPDOCVERSION).ps
STORED_PBUNDLE_ITEM[lpdoc_ps]=$(PBUNDLE_BASE)_lpdoc.ps

PRODUCED_PBUNDLE_ITEM[ciao_pdf]=../doc/ciao-$(CIAOVERSION).pdf
STORED_PBUNDLE_ITEM[ciao_pdf]=$(PBUNDLE_BASE)_ciao.pdf
PRODUCED_PBUNDLE_ITEM[ciaopp_pdf]=../doc/ciaopp-$(CIAOPPVERSION).pdf
STORED_PBUNDLE_ITEM[ciaopp_pdf]=$(PBUNDLE_BASE)_ciaopp.pdf
PRODUCED_PBUNDLE_ITEM[lpdoc_pdf]=../doc/lpdoc-$(LPDOCVERSION).pdf
STORED_PBUNDLE_ITEM[lpdoc_pdf]=$(PBUNDLE_BASE)_lpdoc.pdf

PRODUCED_PBUNDLE_ITEM[ciao_html]=../doc/ciao-$(CIAOVERSION).html/
STORED_PBUNDLE_ITEM[ciao_html]=$(PBUNDLE_BASE)_ciao.html/
PRODUCED_PBUNDLE_ITEM[ciaopp_html]=../doc/ciaopp-$(CIAOPPVERSION).html/
STORED_PBUNDLE_ITEM[ciaopp_html]=$(PBUNDLE_BASE)_ciaopp.html/
PRODUCED_PBUNDLE_ITEM[lpdoc_html]=../doc/lpdoc-$(LPDOCVERSION).html/
STORED_PBUNDLE_ITEM[lpdoc_html]=$(PBUNDLE_BASE)_lpdoc.html/

# The following packages are also preserved, although they are not
# required by the web site:
PRODUCED_PBUNDLE_ITEM[ciao_manl]=../doc/ciao-$(CIAOVERSION).manl
STORED_PBUNDLE_ITEM[ciao_manl]=$(PBUNDLE_BASE)_ciao.manl
PRODUCED_PBUNDLE_ITEM[ciaopp_manl]=../doc/ciaopp-$(CIAOPPVERSION).manl
STORED_PBUNDLE_ITEM[ciaopp_manl]=$(PBUNDLE_BASE)_ciaopp.manl
PRODUCED_PBUNDLE_ITEM[lpdoc_manl]=../doc/lpdoc-$(LPDOCVERSION).manl
STORED_PBUNDLE_ITEM[lpdoc_manl]=$(PBUNDLE_BASE)_lpdoc.manl

PRODUCED_PBUNDLE_ITEM[ciao_info]=../doc/ciao-$(CIAOVERSION).info
STORED_PBUNDLE_ITEM[ciao_info]=$(PBUNDLE_BASE)_ciao.info
PRODUCED_PBUNDLE_ITEM[ciaopp_info]=../doc/ciaopp-$(CIAOPPVERSION).info
STORED_PBUNDLE_ITEM[ciaopp_info]=$(PBUNDLE_BASE)_ciaopp.info
PRODUCED_PBUNDLE_ITEM[lpdoc_info]=../doc/lpdoc-$(LPDOCVERSION).info
STORED_PBUNDLE_ITEM[lpdoc_info]=$(PBUNDLE_BASE)_lpdoc.info

PRODUCED_PBUNDLE_ITEM[ciao_texi]=../doc/ciao-$(CIAOVERSION).texi
STORED_PBUNDLE_ITEM[ciao_texi]=$(PBUNDLE_BASE)_ciao.texi
PRODUCED_PBUNDLE_ITEM[ciaopp_texi]=../doc/ciaopp-$(CIAOPPVERSION).texi
STORED_PBUNDLE_ITEM[ciaopp_texi]=$(PBUNDLE_BASE)_ciaopp.texi
PRODUCED_PBUNDLE_ITEM[lpdoc_texi]=../doc/lpdoc-$(LPDOCVERSION).texi
STORED_PBUNDLE_ITEM[lpdoc_texi]=$(PBUNDLE_BASE)_lpdoc.texi

PRODUCED_PBUNDLE_ITEM[ciao_dvi]=../doc/ciao-$(CIAOVERSION).dvi
STORED_PBUNDLE_ITEM[ciao_dvi]=$(PBUNDLE_BASE)_ciao.dvi
PRODUCED_PBUNDLE_ITEM[ciaopp_dvi]=../doc/ciaopp-$(CIAOPPVERSION).dvi
STORED_PBUNDLE_ITEM[ciaopp_dvi]=$(PBUNDLE_BASE)_ciaopp.dvi
PRODUCED_PBUNDLE_ITEM[lpdoc_dvi]=../doc/lpdoc-$(LPDOCVERSION).dvi
STORED_PBUNDLE_ITEM[lpdoc_dvi]=$(PBUNDLE_BASE)_lpdoc.dvi

# Specifies if the generated logs must be copied to the logs machine,
# it must be set to no if this cfg is for the LOG_REPO_HOST:

BACKUP_LOG=no
