# ---------------------------------------------------------------------------

# Obtain the directory where this script is located
old_dir=`pwd`; cd `dirname $0`; self=`pwd`; cd ${old_dir}; old_dir=

# Exit immediately if a simple command exits with a non-zero status
set -e

# ---------------------------------------------------------------------------

cd ${self}
make -sj $*
