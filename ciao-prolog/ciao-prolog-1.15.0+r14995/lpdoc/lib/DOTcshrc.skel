#
# Setting paths for the executables:
#
setenv LPDOCBINDIR <v>binary_directory</v>
if ( ${?PATH} == 0 ) then
   setenv PATH ${LPDOCBINDIR}
else
        switch (${PATH})
	case ${LPDOCBINDIR}:*:      # it is first one
	     breaksw
	case *:${LPDOCBINDIR}:      # it is last one
	     breaksw
	case *:${LPDOCBINDIR}:*:    # it is in the middle
	     breaksw
	default:
	     setenv PATH ${LPDOCBINDIR}:${PATH}
	     breaksw
	endsw
endif
#
# Setting documentation-related paths:
#
# Setting this variable makes the manuals accessible to emacs (via M-x
# info), the GNU info standalone manuals browser (type info at the
# command line), the unix man command, etc.
# 
setenv LPDOCDOCDIR <v>documentation_directory</v>
# Set MANPATH (checking that we do not add it twice)
if ( ${?MANPATH} == 0 ) then
        setenv MANPATH ${LPDOCDOCDIR}
else
	switch (${MANPATH})
	case ${LPDOCDOCDIR}:*:      # it is first one
	     breaksw
	case *:${LPDOCDOCDIR}:      # it is last one
	     breaksw
	case *:${LPDOCDOCDIR}:*:    # it is in the middle
	     breaksw
	default:
	     setenv MANPATH ${LPDOCDOCDIR}:${MANPATH}
	     breaksw
	endsw
endif
# Set INFOPATH (checking that we do not add it twice)
if ( ${?INFOPATH} == 0 ) then
        setenv INFOPATH /usr/info:/usr/share/info:/usr/local/info:${LPDOCDOCDIR}
else
	switch (${INFOPATH})
	case ${LPDOCDOCDIR}:*:      # it is first one
	     breaksw
	case *:${LPDOCDOCDIR}:      # it is last one
	     breaksw
	case *:${LPDOCDOCDIR}:*:    # it is in the middle
	     breaksw
	default:
	     setenv INFOPATH ${INFOPATH}:${LPDOCDOCDIR}
	     breaksw
	endsw
endif
